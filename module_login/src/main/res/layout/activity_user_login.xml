<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#fff"
    android:layout_height="match_parent"
    tools:context=".view.UserLoginActivity">
<ImageView
    android:layout_alignParentTop="true"
    android:scaleType="fitXY"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_260"
    android:src="@drawable/party_chat_top"/>
    <ImageView
        android:layout_marginTop="@dimen/dp_50"
        android:layout_marginLeft="@dimen/dp_20"
        android:id="@+id/iv_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@mipmap/ic_white_back"/>
    <LinearLayout
        android:id="@+id/ll_tel"
        android:layout_width="match_parent"
        android:elevation="@dimen/dp_4"
        android:layout_height="@dimen/dp_60"
        android:layout_below="@+id/tv_tel"
        android:layout_marginTop="@dimen/dp_110"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:orientation="horizontal"
        android:background="@drawable/input_telphone_bg">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000"
            android:text="+86"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/dp_16"
            android:layout_marginRight="@dimen/dp_18"
            android:layout_marginBottom="@dimen/dp_16"
            android:layout_marginLeft="@dimen/dp_15"/>
        <View
            android:layout_width="@dimen/dp_0.5"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#d8d8d8"
            android:layout_marginBottom="@dimen/dp_15"
            android:layout_marginTop="@dimen/dp_15"/>
        <EditText
            android:paddingLeft="@dimen/dp_8"
            android:layout_marginRight="@dimen/dp_50"
            android:id="@+id/et_tel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#fff"
            android:hint="电话号码"
            android:textColor="#000"
            android:inputType="phone"/>
    </LinearLayout>
    <Button
        android:textColor="#fff"
        android:text="下一步"
        android:id="@+id/btn_login"
        android:layout_marginRight="@dimen/dp_30"
        android:layout_marginLeft="@dimen/dp_30"
        android:layout_marginTop="@dimen/dp_150"
        android:layout_below="@+id/ll_tel"
        android:background="@drawable/btn_telphone_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_60" />
</RelativeLayout>